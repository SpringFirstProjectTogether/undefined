<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lec.spring.repository.community.ReplyRepository">

    <sql id="SELECT_BASE_USER_INNER">
        SELECT
            c.comment_id,
            c.feed_id,
            c.parent_id,
            c.content,
            u.user_id,
            u.user_login_id,
            u.user_password,
            u.nickname
        FROM
            feed_comments c JOIN users u
            ON c.user_id = u.user_id
    </sql>


    <resultMap id="mapUser" type="com.lec.spring.domain.UserDTO">
        <result column="user_id" property="userId"/>
        <result column="user_login_id" property="loginId"/>
        <result column="user_password" property="password"/>
        <result column="nickname" property="nickname"/>
    </resultMap>

    <resultMap id="mapInner" type="com.lec.spring.domain.community.ReplyDTO">
        <result column="comment_id" property="replyId"/>
        <result column="feed_id" property="replyFeedId"/>
        <result column="user_id" property="replyUserId"/>
        <result column="parent_id" property="commentId"/>
        <result column="content" property="replyContent"/>
        <association property="user" resultMap="mapUser"/>
    </resultMap>

    <select id="findReplyByParentID" resultMap="mapInner">
        <include refid="SELECT_BASE_USER_INNER"/>
        WHERE parent_id = #{parentId}
    </select>

    <insert id="addReplyComment" flushCache="true" useGeneratedKeys="true" keyColumn="comment_id" keyProperty="replyId">
        INSERT INTO feed_comments (feed_id, user_id, parent_id, content)
        VALUES (#{replyFeedId}, #{user.userId}, #{commentId}, #{replyContent})
    </insert>

    <delete id="deleteReplyCommentById" flushCache="true">
        DELETE FROM feed_comments WHERE comment_id = #{replyId}
    </delete>


</mapper>











